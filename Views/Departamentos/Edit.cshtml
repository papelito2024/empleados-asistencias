@model test2.Models.Departamento

<div class="container row">

    <div class="m-auto col-md-5">
        <h1>Editar Departamento</h1>

        @using (Html.BeginForm("Edit", "Departamentos", new { id = Model.Id }, FormMethod.Post))
        {
            @Html.AntiForgeryToken() <!-- Para protecciÃ³n contra ataques CSRF -->

            <div class="form-group">

                @Html.HiddenFor(m => m.Id)
                <!-- Usamos HiddenFor para que el Id sea enviado en el formulario pero no sea visible -->
            </div>

            <div class="form-group">
                <label for="Name"></label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nombre del departamento" })
                <!-- Campo de texto para editar el Name -->
            </div>

            <button type="submit" class="btn btn-primary">Editar</button>
        }

    </div>

   

    
   
      
   </div>


 



    
